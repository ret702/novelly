<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ret.novelly.novelly.UserPage"
    android:id="@+id/userpageparent"
    android:background="#33b5e5">


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Winner!"
        android:id="@+id/checkBox_winner"
        android:button="@drawable/trophy"
        android:layout_above="@+id/textView_numOfVotes"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignLeft="@+id/textView_numOfVotes"
        android:layout_alignStart="@+id/textView_numOfVotes"
        android:gravity="fill"

        android:buttonTint="#44dce7"
        android:checked="false" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="Votes"
        android:id="@+id/textView_numOfVotes"
        android:background="@drawable/star"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/imageView_up_bookimage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:gravity="center"
        android:backgroundTint="#44dce7" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:id="@+id/imageView_up_bookimage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/front"
        android:layout_toLeftOf="@+id/textView_numOfVotes"
        android:layout_toStartOf="@+id/textView_numOfVotes"
        android:background="@color/wallet_highlighted_text_holo_light"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Dragonlance"
        android:id="@+id/textView_up_booktitle"
        android:layout_below="@+id/imageView_up_bookimage"
        android:layout_alignLeft="@+id/imageView_up_bookimage"
        android:layout_alignStart="@+id/imageView_up_bookimage"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/wallet_highlighted_text_holo_light"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_up_booktext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView_up_booktitle"
        android:layout_above="@+id/linearLayout"
        android:background="@color/wallet_highlighted_text_holo_light"
        android:autoText="true"
        android:textStyle="bold"
        android:textColor="#000000" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="2"
       >

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/button_back"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/holo_blue_light" />

        <Button

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/button_next"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/holo_blue_light" />

    </LinearLayout>



</RelativeLayout>
